#!/bin/bash

export DISPLAY=:0
ROOT_PATH=${ROOT_PATH:-"/opt/qubicaamf/monitor/transform"}
VERBOSE=${VERBOSE:-0}

xrandr --output HDMI1 --transform `cat ${ROOT_PATH}/sx` $(x=$(echo ${VERBOSE}); [ $x -eq 1 ] && echo --verbose)
xrandr --output HDMI2 --transform `cat ${ROOT_PATH}/dx` $(x=$(echo ${VERBOSE}); [ $x -eq 1 ] && echo --verbose)

